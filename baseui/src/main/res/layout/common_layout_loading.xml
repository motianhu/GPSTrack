<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_00000000">

    <LinearLayout
        android:layout_width="@dimen/dimen_98dp"
        android:layout_height="@dimen/dimen_98dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/sv_loading_bg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/loading_pb"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:src="@drawable/sv_icon_loading" />

        <TextView
            android:id="@+id/loading_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:textColor="@color/color_A4A9AF"
            android:textSize="@dimen/font_12"
            android:visibility="gone"
            tools:text="@string/dialog_load_loading_text" />
    </LinearLayout>
</RelativeLayout>