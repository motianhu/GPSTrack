<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingStart="@dimen/dimen_30dp"
    android:background="@color/color_B2B2B2"
    android:paddingEnd="@dimen/dimen_30dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/alarm_icon"
        android:layout_width="@dimen/dimen_28dp"
        android:layout_centerVertical="true"
        android:layout_height="@dimen/dimen_30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_27dp"
        android:layout_toEndOf="@+id/alarm_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alarm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:textSize="@dimen/font_16" />

        <TextView
            android:id="@+id/alarm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_14"
            android:layout_marginBottom="@dimen/dimen_10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1px"
            android:background="#EEE0CD" />

        <TextView
            android:id="@+id/alarm_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:textSize="@dimen/font_14" />

    </LinearLayout>

    <ImageView
        android:id="@+id/removeMsg"
        android:layout_width="@dimen/dimen_30dp"
        android:layout_height="@dimen/dimen_30dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_alignParentEnd="true"
        android:scaleType="center"
        android:src="@drawable/close" />

</RelativeLayout>