<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/common_navigation_layout" />

    <RelativeLayout
        android:id="@+id/jianti"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55dp"
        android:paddingStart="@dimen/dimen_16dp"
        android:paddingEnd="@dimen/dimen_20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/dimen_15dp"
            android:gravity="center"
            android:text="@string/jianti"
            android:textColor="@color/color_222A37"
            android:textSize="@dimen/font_16" />

        <ImageView
            android:id="@+id/selectJianti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right_icon" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1px"
        android:background="@color/color_C0BCBCB8"/>
    <RelativeLayout
        android:id="@+id/fanti"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55dp"
        android:paddingStart="@dimen/dimen_16dp"
        android:paddingEnd="@dimen/dimen_20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/dimen_15dp"
            android:gravity="center"
            android:text="@string/fanti"
            android:textColor="@color/color_222A37"
            android:textSize="@dimen/font_16" />

        <ImageView
            android:id="@+id/selectFanti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right_icon" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1px"
        android:background="@color/color_C0BCBCB8"/>
    <RelativeLayout
        android:id="@+id/english"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55dp"
        android:paddingStart="@dimen/dimen_16dp"
        android:paddingEnd="@dimen/dimen_20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/dimen_15dp"
            android:gravity="center"
            android:text="@string/english"
            android:textColor="@color/color_222A37"
            android:textSize="@dimen/font_16" />

        <ImageView
            android:id="@+id/selectEnglish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right_icon" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1px"
        android:background="@color/color_C0BCBCB8"/>

    <TextView
        android:id="@+id/seleckOk"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:background="@drawable/bg_corner"
        android:gravity="center"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_10dp"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/font_18" />
</LinearLayout>