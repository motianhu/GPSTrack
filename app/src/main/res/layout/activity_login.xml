<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="112dp"
        android:layout_height="168dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_68dp"
        android:background="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="51dp"
        android:layout_marginTop="@dimen/dimen_68dp"
        android:layout_marginEnd="51dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_input_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:background="@drawable/text_border"
            android:drawableLeft="@mipmap/ic_launcher"
            android:gravity="center_vertical"
            android:hint="@string/email"
            android:text="moth@qq.com"
            android:textSize="@dimen/font_12" />

        <EditText
            android:id="@+id/et_input_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:background="@drawable/text_border"
            android:drawableLeft="@mipmap/ic_launcher"
            android:gravity="center_vertical"
            android:hint="@string/password"
            android:text="12345678"
            android:textSize="@dimen/font_12" />


        <TextView
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bg_corner"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_10dp"
            android:text="@string/login"
            android:textColor="@color/color_222A37"
            android:textSize="@dimen/font_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_5dp"
            android:text="@string/forget_password" />

        <View
            android:layout_width="@dimen/dimen_1px"
            android:background="@color/color_64B8D7"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_reigster"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register" />
    </LinearLayout>


</LinearLayout>