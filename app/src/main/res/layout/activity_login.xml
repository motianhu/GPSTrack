<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="112dp"
        android:layout_height="168dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_68dp"
        android:background="@drawable/logo" />

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_below="@id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="@dimen/dimen_68dp"
        android:layout_marginEnd="51dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_input_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:paddingStart="@dimen/dimen_20dp"
            android:drawablePadding="@dimen/dimen_20dp"
            android:background="@drawable/text_border"
            android:drawableStart="@drawable/username"
            android:gravity="center_vertical"
            android:hint="@string/email"
            android:text="mo@qq.com"
            android:textColor="@color/color_9E9E9E"
            android:textColorHint="@color/color_80E9E9E"
            android:textSize="@dimen/font_12" />

        <EditText
            android:id="@+id/et_input_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:paddingStart="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:background="@drawable/text_border"
            android:drawablePadding="@dimen/dimen_20dp"
            android:drawableStart="@drawable/password"
            android:gravity="center_vertical"
            android:hint="@string/password"
            android:text="12345678"
            android:inputType="textPassword"
            android:textColor="@color/color_9E9E9E"
            android:textColorHint="@color/color_80E9E9E"
            android:textSize="@dimen/font_12" />


        <TextView
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginTop="@dimen/dimen_50dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bg_corner"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_10dp"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_5dp"
            android:text="@string/forget_password" />

        <View
            android:layout_width="@dimen/dimen_1px"
            android:background="@color/color_64B8D7"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_reigster"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_64B8D7"
            android:text="@string/register" />
    </LinearLayout>


</RelativeLayout>