<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/plan_time_txt_month"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_37dp"
        android:text="Aug 2017"
        android:background="@color/color_F7F8FA"
        android:textColor="@color/color_222A37"
        android:gravity="center"
        android:textSize="16sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/plan_time_recycler_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>